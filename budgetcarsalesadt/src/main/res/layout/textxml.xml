<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/thumb_size"
        android:layout_height="@dimen/thumb_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/proficon" />

    <ImageView
        android:id="@+id/img_orange_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image"
        android:src="@drawable/orange_line" />

    <LinearLayout
        android:id="@+id/linear_btw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imagemessage"
            android:layout_width="@dimen/navigation_icon"
            android:layout_height="@dimen/navigation_icon"
            android:src="@drawable/messageicon" />

        <ImageView
            android:id="@+id/imagecall"
            android:layout_width="@dimen/navigation_icon"
            android:layout_height="@dimen/navigation_icon"
            android:src="@drawable/phoneicon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textnameprof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearanceLarge"
            android:textColor="@color/text_color_blue" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearanceLarge"
            android:textColor="@color/text_color_blue" />
    </LinearLayout>

</RelativeLayout>