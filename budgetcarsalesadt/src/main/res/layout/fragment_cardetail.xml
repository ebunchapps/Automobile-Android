<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
        <!--android:src="@drawable/abc_ab_bottom_solid_dark_holo" -->
        <!--/>-->

    <TextView
        android:id="@+id/txt_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="2013 Acura ILX Base"
        android:textAppearance="@style/TextAppearanceMedium"
        android:textColor="#a3a3a3" />
    
    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:textAppearance="@style/TextAppearanceMedium"
        android:text="Dist: 14.7 km away"
        android:textColor="#a3a3a3" />
    
    <TextView
        android:id="@+id/txt_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_distance"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:textAppearance="@style/TextAppearanceMedium"
        android:text="KM: 2,300 km"
        android:textColor="#a3a3a3" />
    
      <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_km"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="$24,700"
        android:textAppearance="@style/TextAppearanceMedium"
        android:textColor="@color/black" />
    
    
    

</RelativeLayout>