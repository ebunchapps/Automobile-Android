<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:id="@+id/relative_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/linearAccountInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height"
            android:background="@color/black"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewAccountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="18dp"
                android:text="Dealer info"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_signup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height"
            android:layout_below="@+id/linearAccountInfo"
            android:background="@color/white" >

            <TextView
                android:id="@+id/textviewSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color_gray" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_signup" >

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
            <RelativeLayout
                android:id="@+id/relative_formFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/textView_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:text="NAME:"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/textView_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_Name"
                    android:layout_below="@+id/textView_Name"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="E MAIL:"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/textView_Phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_Name"
                    android:layout_below="@+id/textView_Email"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="PH NO:"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/textView_Adderss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView_Name"
                    android:layout_below="@+id/textView_Phonenum"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="ADDRESS:"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/edittext_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_Name"
                    android:layout_alignLeft="@+id/edittext_Address"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/textView_Name"
                    android:background="@color/edittextcolor"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearanceSmall"
                    android:textColor="@color/text_color_gray" >
                </TextView>

                <TextView
                    android:id="@+id/edittext_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_Email"
                    android:layout_alignLeft="@+id/edittext_Name"
                    android:layout_alignRight="@+id/edittext_Name"
                    android:background="@color/edittextcolor"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearanceSmall"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/edittext_Phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_Phonenum"
                    android:layout_alignLeft="@+id/edittext_Name"
                    android:layout_alignRight="@+id/edittext_Name"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/edittextcolor"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearanceSmall"
                    android:textColor="@color/text_color_gray" />

                <TextView
                    android:id="@+id/edittext_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView_Adderss"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/textView_Adderss"
                    android:background="@color/edittextcolor"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearanceSmall"
                    android:textColor="@color/text_color_gray" />
            </RelativeLayout>
                <LinearLayout
                    android:id="@+id/linearlayoutcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_formFields"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/imagecall"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/textviewcall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:autoLink="phone"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutcall"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imageemail"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/email" />

                    <TextView
                        android:id="@+id/textviewemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:autoLink="email"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutemail"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imagefb"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/facebook" />

                    <TextView
                        android:id="@+id/textviewfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutgoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutfb"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imagegoogle"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/google" />

                    <TextView
                        android:id="@+id/textviewgoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutdigg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutgoogle"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imagedigg"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/digg" />

                    <TextView
                        android:id="@+id/textviewdigg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutyoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutdigg"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imageyoutube"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/youtube" />

                    <TextView
                        android:id="@+id/textviewyoutube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayouttwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayoutyoutube"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imagetwitter"
                        android:layout_width="@dimen/closebtn"
                        android:layout_height="@dimen/closebtn"
                        android:src="@drawable/twitter" />

                    <TextView
                        android:id="@+id/textviewtwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="hhkj"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>